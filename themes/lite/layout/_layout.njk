{%- import "_variables.njk" as themeconf %}
<!DOCTYPE html>
<html lang="{{ config.language }}">
    <head>
        <meta charset="utf-8">
        <title>{% block pagetitle %}{{ config.title }}{% endblock %}</title>
        {%- include "_headsource.njk" %}
    </head>
    <body>
        <main class="main">
            <div class="column">
                <header>
                    <div class="site-brand">
                        <div class="site-nav-left"></div>
                        <div class="site-meta">
                            <p class="site-title">{{ config.title }}</p>
                            {%- if config.subtitle %}<p class="site-subtitle">{{ config.subtitle }}</p>{% endif %}
                        </div>
                        <div class="site-nav-right"></div>
                    </div>
                    <nav class="site-nav">
                        <ul class="main-menu">
                            {%- for node in themeconf.menu %}
                            <li class="menu-item"><a href="{{ node[1] }}"><i class="{{ node[2] }} fa-fw"></i>{{ node[0] }}</a></li>
                            {%- endfor %}
                            <li class="menu-item menu-more">
                                <a class="menu-more-btn"><i class="fa fa-ellipsis-vertical fa-fw"></i>更多</a>
                                {%- for node in themeconf.more_menu %}
                                <a href="{{ node[1] }}" class="morebtn-item"><i class="{{ node[2] }} fa-fw"></i>{{ node[0] }}</a>
                                {%- endfor %}
                            </li>
                            <li class="menu-item"><a class="menu-search"><i class="fa fa-search fa-fw"></i>搜索</a></li>
                        </ul>
                    </nav>
                </header>
                <div class="site-sidebar">
                    {% block pagesidebar %}{% endblock %}
                </div>
            </div>
            <div class="main-inner">
                {% block pagebody %}{% endblock %}
            </div>
        </main>
        <div class="back-to-top"><i class="fa fa-angles-up fa-fw"></i><span class="progress"></span></div>
        <aside class="pjax-prog"></aside>
        {%- include "_search.njk" %}
        <footer class="footer">
            &copy; {{ post_time(void, "YYYY") }} &nbsp;<i class="fa fa-paper-plane"></i>&nbsp; {{ config.author }}
        </footer>
        {%- include "_javascriptload.njk" %}
    </body>
</html>