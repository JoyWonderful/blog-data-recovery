$font-size-def = 16px;
$defalut-fontfamily = 'lxgw';
$mono-fontfamily = Consolas, Menlo, Monaco, "Andale Mono", "Ubuntu Mono", "Courier New", monospace;
$title-fontsz = 1.625em;
$title-fontsz-step = .125em;

$theme-color = #222;
$elmarginbtm = 20px;
$contentbg = #fff;
$theme-bdrd = 5px;
$theme-boxshad = 0 2px 2px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.06), 0 1px 5px 0 rgba(0, 0, 0, 0.12);

$text-color = #555;
$link-hover-color = #222;

$note-text = 'info'  'success' 'warning' 'danger';
$note-fg   = {
    info   : #428bca,
    success: #5cb85c,
    warning: #f0ad4e,
    danger : #d9534f
};
$note-bg   = {
    info   : #eef7fa,
    success: #eff8f0,
    warning: #fdf8ea,
    danger : #fcf1f2
};
$note-icon = {
    info   : '\f05a',
    success: '\f058',
    warning: '\f071',
    danger : '\f1e2'
};